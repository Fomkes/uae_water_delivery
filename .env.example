# Supabase Configuration
# Получите эти ключи из Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth Secret (сгенерируйте случайную строку)
NEXTAUTH_SECRET=your-super-secret-key-here-change-this

# API URL (замените на ваш домен при развертывании)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Node Version для Netlify
NODE_VERSION=18

# Настройки для production (Netlify)
# NEXT_PUBLIC_API_URL=https://your-site.netlify.app
